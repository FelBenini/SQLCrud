@model Produto
@{
    ViewData["Title"] = "Atualizando" + Model.Name;
}

<form method="post" asp-action="Atualiza" asp-controller="Home">
    <input type="hidden" asp-for="Id"/>
    <input type="text" asp-for="Name"/>
    <input type="number" step="0.01" asp-for="Price" />
    <button type="submit">Atualizar</button>
</form>