@model List<Produto>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table text-center">
    <thead>
    <th>#</th>
    <th>Nome</th>
    <th>Preço</th>
    <th>Ações</th>
    </thead>
    @{
        foreach (Produto produto in Model)
        {
            <tbody>
            <th scope="col">@produto.Id</th>
            <td> @produto.Name</td>
            <td>@produto.Price</td>
            <td>
                <a asp-action="Produto" asp-controller="Home" asp-route-id="@produto.Id">Visualizar</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@produto.Id">Deletar</a>
                <a asp-action="Update" asp-controller="Home" asp-route-id="@produto.Id">Atualizar</a>
            </td>
            </tbody>
        }
    }
</table>